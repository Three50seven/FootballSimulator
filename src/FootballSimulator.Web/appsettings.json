{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=Football_Simulator;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "AppSettings": {
    "MiniProfilerEnabled": true,
    "DomainUrl": "https://localhost:5000/"
  },
  "Authentication": {
    "AccessDeniedPath": "/account/access-denied",
    "LoginPath": "/account/login/",
    "TimeoutMinutes": 30
  },
  "DataCache": {
    "Profiles": {
      "ManyDays": "7.00:00:00",
      "Aggressive": "04:00:00",
      "Standard": "00:30:00",
      "Short": "00:10:00"
    },
    "Enabled": true
  },
  "ClientSideSettings": {
    "Debug": true,
    "AlertErrors": true,
    "UserSessionTimeout": 120
  },
  "DataProtection": {
    "ApplicationName": "football-simulator-web",
    "KeyStorageDirectory": "C:\\keys"
  },
  "AllowedHosts": "*",
  "NLog": {
    "throwConfigExceptions": true,
    "throwExceptions": true,
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "Common.Logging.NLog" }
    ],
    "variables": {
      "innerExceptionLayout": "\n\nINNER EXCEPTION =>\n",
      "customExceptionDetails": "${exception:innerFormat Type, Message, ToString, Method, StackTrace:maxInnerExceptionLevel=5:innerExceptionSeparator=${innerExceptionLayout}:format=Type, Message, StackTrace, Data}",
      "fileLogsDirectory": "${gdc:item=appbasepath}/../../logs/web"
    },
    "targets": {
      "ConsoleLog": {
        "type": "Console",
        "layout": "${longdate} | ${logger} | ${message} ${customExceptionDetails}"
      },
      "ErrorFileLog": {
        "type": "File",
        "fileName": "${fileLogsDirectory}/error/error-${shortdate}.log",
        "layout": "${longdate} | ${aspnet-item:variable=UniqueRequestId} | ${level} | ${logger} | ${message} ${customExceptionDetails} | url: ${aspnet-request-url:IncludeQueryString=true} | action: ${aspnet-mvc-action} | user: ${aspnet-user-identity}"
      },
      "FileValidationFileLog": {
        "type": "File",
        "fileName": "${fileLogsDirectory}/file_validation/${shortdate}.log",
        "layout": "${longdate} | ${level} | ${logger} | ${message} ${customExceptionDetails} | url: ${aspnet-request-url:IncludeQueryString=true} | action: ${aspnet-mvc-action} | user: ${aspnet-user-identity}",
        "keepFileOpen": true,
        "openFileCacheTimeout": 30
      },
      "ErrorMailLog": {
        "type": "Mail",
        "layout": "An unexpected exception has occured. Date: ${longdate}${newline}Machine: ${machinename}${newline}Logger: ${logger}${newline}Unique Request ID: ${aspnet-item:variable=UniqueRequestId}${newline}${newline}Exception: ${exception:Type}${newline}Message: ${message}${newline}${newline}Stack Trace:${newline}${customExceptionDetails}${newline}url: ${aspnet-request-url:IncludeQueryString=true}${newline}referrer: ${aspnet-Request-Referrer}${newline}action: ${aspnet-mvc-action}${newline}user: ${aspnet-user-identity}",
        "html": false,
        "addNewLines": true,
        "encoding": "UTF-8",
        "subject": "Football Simulator ${aspnet-environment} Auto Notify - Web Error",
        "to": "[[if_using_add_valid_email_address]]",
        "from": "[[if_using_add_valid_email_address]]",
        "smtpAuthentication": "None",
        "smtpServer": "[[if_using_add_valid_smtp_address]]"
      }
    },
    "rules": [
      {
        "logger": "AspNetCoreStartup",
        "minLevel": "Info",
        "writeTo": "ConsoleLog",
        "enabled": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "ConsoleLog",
        "enabled": false
      }
    ]
  }
}
